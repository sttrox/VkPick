<Page
    x:Class="VkPick.Pages.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VkPick.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Login"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Page.Resources>
        <Style TargetType="ContentControl">
            <Setter Property="FontSize" Value="30" />
        </Style>
    </Page.Resources>
    <Grid Background="{StaticResource SolidColorBrushBackground}">
        <StackPanel Margin="40,0,40,0" VerticalAlignment="Center">
            <Label Content="Login" Foreground="White" />
            <TextBox Name="BoxLogin" />
            <Label Content="Password" Foreground="White" />
            <PasswordBox Name="BoxPassword" />
            <Button
                Name="ButtonEnter"
                Width="230"
                Margin="0,23,0,0"
                Click="ButtonEnter_OnClick"
                Content="Enter" />
        </StackPanel>
    </Grid>
</Page>
